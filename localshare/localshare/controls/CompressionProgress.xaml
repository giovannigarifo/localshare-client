<UserControl x:Class="localshare.CompressionProgress"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:localshare"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="650">


    <TextBlock x:Name="CompressionMessage" VerticalAlignment="Center" TextAlignment="Center" TextTrimming="CharacterEllipsis"
     FontSize="16" FontFamily="Segoe UI" FontStretch="Condensed" FontWeight="SemiBold">
        Please wait while we compress the file to be sent
    </TextBlock>
           
</UserControl>
